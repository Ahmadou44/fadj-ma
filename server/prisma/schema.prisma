generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  phone     String   @unique
  password  String
  name      String
  role      String   @default("PATIENT") // PATIENT, PHARMACY, ADMIN, DELIVERER
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  pharmacy  Pharmacy?
  orders    Order[]
}

model Pharmacy {
  id              String   @id @default(uuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id])
  name            String
  address         String   @default("Dakar")
  latitude        Float    @default(14.7167)
  longitude       Float    @default(-17.4677)
  license         String?
  isVerified      Boolean  @default(false)
  verificationStatus String @default("PENDING") // PENDING, VERIFIED, REJECTED
  
  stocks          Stock[]
  sales           Order[]
}

model Drug {
  id          String   @id @default(uuid())
  name        String
  dosage      String?
  form        String?
  class       String? // Therapeutic class
  description String?
  imageUrl    String?
  
  stocks      Stock[]
}

model Stock {
  id          String   @id @default(uuid())
  pharmacyId  String
  pharmacy    Pharmacy @relation(fields: [pharmacyId], references: [id])
  drugId      String
  drug        Drug     @relation(fields: [drugId], references: [id])
  quantity    Int      @default(0)
  price       Float    @default(0.0)
  
  @@unique([pharmacyId, drugId])
}

model Order {
  id             String   @id @default(uuid())
  patientId      String
  patient        User     @relation(fields: [patientId], references: [id])
  pharmacyId     String
  pharmacy       Pharmacy @relation(fields: [pharmacyId], references: [id])
  
  status         String   @default("PENDING") // PENDING, CONFIRMED, READY, COMPLETED, CANCELLED
  type           String   @default("PICKUP") // PICKUP, DELIVERY
  
  totalPrice     Float    @default(0.0)
  prescriptionUrl String?
  
  paymentMethod  String   @default("CASH") // CASH, WAVE, OM, FREE
  paymentStatus  String   @default("PENDING") // PENDING, PAID, FAILED
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
